{
    "name": "hierogifics",
    "version": "1.0",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "GIFS, but better.",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "img/icon.png"
    },

    "background": {
        "scripts": ["js/background_script.js"]
      },

    "content_scripts": [
        {
            "exclude_globs": [  ],
            "include_globs": [ "*" ],
            "css": [
                "css/toolbelt.css",
	    	"css/hierogif.css"
            ],
            "js": [ 
                "js/libs/jquery-2.0.3.min.js",
                "js/libs/mousetrap.min.js",
                "js/parser.js",
                "js/expander.js",
                "js/pauser.js",
                "js/toolbelt.js",
        		"js/add_hierogif.js",
        		"js/inscriber.js"
            ],

            "matches": [  
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_end"
        }
    ],

    "permissions": [
	"http://hierogifics.herokuapp.com/*",
        "tabs",
        "storage",
        "contextMenus",
        "management",
        "clipboardWrite"
    ],

    "web_accessible_resources": [
        "img/*",
        "css/*",
        "css/fonts/*",
        "js/*",
        "js/libs/*",
        "html/*"
    ]
}
